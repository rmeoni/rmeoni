<div class="projects">
	<% if current_user %>
		<div class="app-nav">
		<%= link_to new_project_path do %>
			<i class="material-icons">add_circle</i>
		<% end %>
	</div>
	<% end %>
		<div class="row">
			<% @projects.each do |p| %>
			<div class="col-md-6 col-xs-12">
				<%= link_to project_path(p), :class => "pull-right" do %>
					<img class="img-responsive" id="thumbs" src="<%= p.image %>">
				<% end %>
				<div class="project-name">
				<p><%= p.name %></p> 
				</div>
			</div>
			<% end %>
		</div>
</div>