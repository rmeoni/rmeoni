<div class="project-form">
	<div class="container">
		<div class="app-nav">
			<%= link_to root_path do %>
				<i class="material-icons">chevron_left</i>
			<% end %>
		<h2>New Project</h2>
		<%= form_for(@project) do |p|%>
			<%= label_tag("Image") %>
			<%= p.text_field :image, :placeholder => 'image url' %>
			<%= label_tag("Name") %>
			<%= p.text_field :name, :placeholder => 'photography name' %>
			<%= label_tag("Description") %>
			<%= p.text_field :description, :placeholder => 'project description' %>
			<%= p.submit 'Submit', :class => 'btn', method: 'create' %>
		<% end %>
	</div>
</div>
<div class="clear-fix">
</div>