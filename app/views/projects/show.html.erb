<div class="page-nav">
			<h2> <%= @project.name %> </h2>
		<ul class="pull-right">
			<li class="square"><i class="material-icons" id="square">reorder</i></li>
			<li class="squares"><i class="material-icons">apps</i></li>
		</ul>
		</div>
<div class="project-photographs">
	<div class="container">
		<% if current_user %>
		<div class="app-nav">
			<%= link_to photo_in_project_path do %>
				<i class="material-icons">add_circle</i>
			<% end %>
		</div>
		<% end %>
		<div class="photo row">
			<% @photographs.each do |p| %>
			<div class="pic col-md-10 col-md-offset-1 col-xs-12">
				<%= link_to photograph_path(p), :class => "pull-right" do %>
					<img class="img-responsive" id="photo" src="<%= p.image %>">
				<% end %>
				'<%= p.name %>' 
				<span>Iso:<%= p.iso %> Exposure:<%= p.exposure %></span>
				<% if current_user %>
				<%= link_to edit_photograph_path(p), :class => "pull-right" do %>
					<i class="material-icons">mode_edit</i>
				<% end %>
				<%= link_to photograph_path(p), :class => "pull-right", method: "delete", data: {confirm: "Are you sure you want to delete this?"} do %>
					<i class="material-icons">delete_forever</i>
				<% end %>
				<% end %>
			</div>
			<% end %>
		</div>
		<div class="app-nav pull-right">
	<ul>
		<li><%= link_to "< Previous Project", @project.prev %></li>
		<li><%= link_to "Next Project >", @project.next %></li>
	</ul>
</div>
	</div>
</div>
<div class="clear-fix">
</div>
<script type="text/javascript">
	
	var main = function() {

		$('.square').click(function(){
    	$('.pic').removeClass('col-md-4');
    	$('.pic').fadeIn('slow');
    	$('.pic').addClass('col-md-10 col-md-offset-1');
    });

    $('.squares').click(function(){
    	$('.pic').removeClass('col-md-10 col-md-offset-1');
    	$('.pic').fadeIn('slow');
    	$('.pic').addClass('col-md-4');
    });

    $('.square').click(function(){
    	$('.pic').removeClass('col-xs-4');
    	$('.pic').fadeIn('slow');
    	$('.pic').addClass('col-xs-12');
    });

    $('.squares').click(function(){
    	$('.pic').removeClass('col-xs-12');
    	$('.pic').fadeIn('slow');
    	$('.pic').addClass('col-xs-4');
    });

};
$(document).ready(main);

	</script>
<embed src="/tycho_dive.mp3" autostart="true" loop="true" hidden="true"><embed>